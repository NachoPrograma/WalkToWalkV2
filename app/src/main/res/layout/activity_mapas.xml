<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Mapas">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="413dp"
        android:layout_height="468dp"
        app:layout_constraintBottom_toTopOf="@+id/map_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/map_controls"
        android:layout_width="478dp"
        android:layout_height="267dp"
        android:layout_marginBottom="4dp"
        android:background="#FFC107"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/bt_izquierda"

            android:layout_width="161dp"
            android:layout_height="193dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            android:src="@drawable/izquierda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageButton
            android:id="@+id/playButton"

            android:layout_width="126dp"
            android:layout_height="134dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            android:src="@drawable/boton_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageButton
            android:id="@+id/bt_derecha"

            android:layout_width="142dp"
            android:layout_height="193dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            android:src="@drawable/derecha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>